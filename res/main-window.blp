using Gtk 4.0;
using Gio 2.0;
using Adw 1;

Adw.ApplicationWindow main-window {
    close-request => $main_window_destroy();
    Box {
        orientation: vertical;

        Adw.HeaderBar {
            title-widget: Adw.WindowTitle {
                title: "Text Editor";
            };

            [start]
            Button file-new {
                Image { icon-name: "document-new-symbolic"; }
                tooltip-text: "New File";
                clicked => $new_file_click();
            }
            [start]
            Button file-open {
                Image { icon-name: "text-x-generic-symbolic"; }
                tooltip-text: "Open File";
                clicked => $open_file_click();
            }
            [start]
            Button file-save {
                Image { icon-name: "document-save-symbolic"; }
                tooltip-text: "Save File";
                clicked => $save_file_click();
            }
            [end]
            // label set in program
            ToggleButton share-toggle {
                label: "❌ Share";
                clicked => $share_toggle_click();
            }
        }

        Gtk.Label label{
            label: "Create a new file or open a file.";
            vexpand: true;
            width-request: 400;
            height-request: 200;
            valign: center;
            visible: bind-property tab-view.visible inverted bidirectional;
            //visible: true;
        }

        Adw.TabBar tab-bar{ 
            view: tab-view;
            autohide: false;
            visible: bind tab-view.visible;
        }

        Adw.ToastOverlay toast-overlay {
            Adw.TabView tab-view {
                vexpand: true;
                width-request: 400;
                height-request: 200;
                visible: false;
                default-icon: Gio.ThemedIcon { name: "text-x-generic-symbolic"; };
                // Will have scrollers with TextViews
                close-page => $close_tab_page();
            }
        }
    }
}
